<h1>RESERVATION</h1>

<form action="/formulaire" method="POST">
  <div class="form-group">
    <label for="name">Nom du client</label>
    <input type="name" class="form-control" id="name" name="name" required />
  </div>

  <div class="form-group">
    <label for="date_debut">Date</label>
    <input
      type="date"
      class="form-control"
      id="date_debut"
      name="date_debut"
      required
    />
  </div>

  <div class="form-group">
    <label for="forfait">Forfait</label>
    <select class="form-control" id="forfait" name="forfait" required>
      <option value="">SÃ©lectionnez un type</option>
      <option value="PetitDino">Forfait Petit Dino</option>
      <option value="MoyenDino">Forfait Moyen Dino</option>
      <option value="Premium">Forfait PREMIUM</option>
    </select>
  </div>

  <div class="form-group">
    <label for="nbre">Nombres de personnes</label>
    <input
      type="Integer"
      class="form-control"
      id="nbre"
      name="nbre"
      placeholder="Ex: HTML, CSS, JavaScript"
      required
    />
  </div>

  <div class="form-group">
    <label for="prix">Prix</label>
    <input type="prix" class="form-control" id="prix" name="prix" required />
  </div>

  <button type="submit" class="btn btn-primary">RESERVEZ</button>
</form>

